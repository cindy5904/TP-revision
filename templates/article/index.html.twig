{% extends 'base.html.twig' %}

{% block title %}Hello ArticleController!{% endblock %}

{% block body %}
      <h1 class="text-3xl font-bold mb-6 text-center mt-8 text-black-500 text-shadow-xl">Articles</h1>
      <div class="grid grid-cols-3 gap-6">
            {% for article in articles %}
            <div class="bg-white rounded-lg shadow-lg p-6">
                <h2 class="text-xl font-bold mb-4 text-center">{{ article.title }}</h2>
                <p class="text-gray-600 mb-4">{{ article.text }}</p>
                <p class="text-sm text-gray-500">publier le {{ article.publishedAt|date('Y-m-d') }} par {{ article.author }}</p>
            </div>
            {% endfor %}
      </div>
{% endblock %}
